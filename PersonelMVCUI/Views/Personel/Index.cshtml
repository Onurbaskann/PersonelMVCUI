@model List<PersonelMVCUI.Models.EntitiyFramework.PersonelTb>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Personel Listesi</h2>

@Html.ActionLink("Yeni Personel", "Yeni", null, new { @class = "btn btnKayit my-2" })

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Departman</th>
            <th>Maas</th>
            <th>Yas</th>
            <th>Doğum Tarihi</th>
            <th>Cinsiyet</th>
            <th>Evlilik Durumu</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
        <tr>
            <td>@personel.PersoneAd</td>
            <td>@personel.PersonelSoyad</td>
            <td>@personel.DepartmanTb.DepartmanAd</td>
            <td>@personel.Maas</td>
            <td>@(DateTime.Now.Year - personel.DogumTarihi.Value.Year)</td>
            <td>@personel.DogumTarihi.Value.ToString("dd-MM-yyyy")</td>
            <td>@(personel.Cinsiyet == true ? "Erkek" : "Kadın")</td>
            <td>@(personel.EvliMi == true ? "Evli" : "Bekar")</td>
            <td>@Html.ActionLink("Güncelle", "Guncelle", new { id=personel.PersonelID}, new { @class = "btn btnGuncel" })</td>
            <th>@Html.ActionLink("Sil","Sil",new {id=personel.PersonelID},new {@class="btn btnSil" })</th>
        </tr>
        }
    </tbody>
</table>

